<html>
    <head>
        <title>{{question.title}}</title>
        <meta charset="UTF-8">

        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap">
        <link rel="stylesheet" href="/static/stylesheets/question.css">
        <link rel="stylesheet" href="/static/stylesheets/googlecode.css">

        <script defer src="/static/libs/highlight.js"></script>
        <script defer src="/static/scripts/questionAndAnswersBodyRendering.js"></script>
    </head>
    <body onload="renderQuestionAndAnswersBodies();">
        <div class="question">
            <div class="left">

                <div id="questionVoteUpButton" {{#question.votedUpByActiveUser}}class="votedUpByActiveUser"{{/question.votedUpByActiveUser}}><svg aria-hidden="true" class="m0 svg-icon iconArrowUpLg" width="25" height="25" viewBox="0 0 36 36"><path d="M2 26h32L18 10 2 26z"></path></svg></div>
                <div class="questionVotes">{{question.votes}}</div>
                <div id="questionVoteDownButton" {{#question.votedDownByActiveUser}}class="votedDownByActiveUser"{{/question.votedDownByActiveUser}}><svg aria-hidden="true" class="m0 svg-icon iconArrowDownLg" width="25" height="25" viewBox="0 0 36 36"><path d="M2 10h32L18 26 2 10z"></path></svg></div>
            </div>

            <div class="main">
                <div class="questionTitleContainer">
                    <a class="questionTitle" href="#">{{question.title}}</a>
                </div>

                <div id="questionBody">{{question.bodyInHTML}}</div>

                <div class="questionInfo">
                    <span>asked</span>
                    <span class="questionDate">{{question.formattedCreationDateTime}}</span>
                    <span>by</span>
                    <span class="questionAuthor">{{question.author.username}}</span>
                </div>

                <ul class="questionTagsList">
                    {{#question.tags}}
                    <li class="questionTagsListItem"><a class="questionTag" href="#">{{name}}</a></li>
                    {{/question.tags}}
                </ul>
            </div>
        </div>

        <h2 id="answersCountHeader">
            <span id="answersCount">{{question.answersCount}}</span>
            <span>answers</span>
        </h2>

        <div id="answersList">
            {{#question.answers}}
            <div class="answer">
                <div class="left">
                    <div id="answerVoteUpButton" {{#votedUpByActiveUser}}class="votedUpByActiveUser"{{/votedUpByActiveUser}}><svg aria-hidden="true" class="m0 svg-icon iconArrowUpLg" width="25" height="25" viewBox="0 0 36 36"><path d="M2 26h32L18 10 2 26z"></path></svg></div>
                    <div class="answerVotes">{{votes}}</div>
                    <div id="answerVoteDownButton" {{#votedDownByActiveUser}}class="votedDownByActiveUser"{{/votedDownByActiveUser}}><svg aria-hidden="true" class="m0 svg-icon iconArrowDownLg" width="25" height="25" viewBox="0 0 36 36"><path d="M2 10h32L18 26 2 10z"></path></svg></div>
                </div>

                <div class="main">
                    <div class="answerBody">{{bodyInHTML}}</div>

                    <div class="answerInfo">
                        <span>answered</span>
                        <span class="answerDate">{{formattedCreationDateTime}}</span>
                        <span>by</span>
                        <span class="answerAuthor">{{author.username}}</span>
                    </div>
                </div>
            </div>
            {{/question.answers}}
        </div>

        {{#authorized}}
        <h2 id="yourAnswerLabel">Your Answer</h2>

        <form id="answerEditorForm" action="/q" method="post">
            <textarea spellcheck="false" id="answerBodyTextArea" name="body"></textarea>

            <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
            <input type="hidden" name="questionId" value="{{question.id}}"></input>
            <input id="postAnswerButton" type="submit" value="Post your answer"/>
        </form>
        {{/authorized}}

        <footer>
            <ul>
                {{#authorized}}
                <li>
                    <form id="logoutForm" method="post" action="/logout">
                        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
                        <input id="logoutButton" type="submit" value="Logout" />
                    </form>
                </li>
                {{/authorized}}
                {{^authorized}}
                <li>
                    <a id="loginButton" href="/login">Login</a>
                </li>
                <li>
                    <a id="signUpButton" href="/registration">Sign Up</a>
                </li>
                {{/authorized}}
            </ul>

            <p id="copyrightLabel">site design / logo Â© 2020 Stack Canary Inc; user contributions licensed under cc by-sa. rev 2020.5.22.36891</p>
        </footer>
    </body>
</html>
